{
  "name": "@iguhealth/server",
  "version": "0.7.8",
  "description": "",
  "main": "./lib/server.js",
  "type": "module",
  "scripts": {
    "prebuild": "node -p \"'export const LIB_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "build": "yarn prebuild && tsc && yarn copyfiles  -u 1 \"./src/**/*.sql\" lib",
    "ci": "yarn build & yarn node --enable-source-maps ./lib/cli.js run server & yarn node --enable-source-maps ./lib/cli.js run worker",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest) --runInBand",
    "db-migrate": "db-migrate --sql-file -m src/resourceProviders/postgres/migrations",
    "migrate": "yarn build && yarn node --enable-source-maps  ./lib/cli.js run migrate && yarn node --enable-source-maps  ./lib/cli.js generate-pg-types",
    "watch": "yarn prebuild && yarn migrate up && yarn tsc-watch --onSuccess \"yarn node --enable-source-maps  ./lib/cli.js run both\"",
    "watch_server": "yarn prebuild && yarn migrate up && yarn tsc-watch --onSuccess \"yarn node --enable-source-maps  ./lib/cli.js run server\"",
    "publish": "yarn build && yarn npm publish --access public --tolerate-republish"
  },
  "dependencies": {
    "@aws-crypto/client-node": "^4.0.0",
    "@aws-sdk/client-lambda": "^3.501.0",
    "@aws-sdk/client-resource-groups-tagging-api": "^3.501.0",
    "@dagrejs/graphlib": "^2.1.13",
    "@iguhealth/artifacts": "workspace:^",
    "@iguhealth/cli": "workspace:^",
    "@iguhealth/client": "workspace:^",
    "@iguhealth/fhir-validation": "workspace:^",
    "@iguhealth/fhirpath": "workspace:^",
    "@iguhealth/generated-ops": "workspace:^",
    "@iguhealth/hl7.fhir.r4.core": "workspace:^",
    "@iguhealth/iguhealth.fhir.r4.core": "workspace:^",
    "@iguhealth/meta-value": "workspace:^",
    "@iguhealth/operation-execution": "workspace:^",
    "@iguhealth/operation-outcomes": "workspace:^",
    "@koa/bodyparser": "^5.0.0",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.1",
    "@sentry/node": "^7.98.0",
    "@sentry/profiling-node": "^1.3.5",
    "@sentry/utils": "^7.98.0",
    "adm-zip": "^0.5.10",
    "ajv": "^8.12.0",
    "commander": "^11.1.0",
    "dayjs": "^1.11.10",
    "db-migrate": "1.0.0-beta.27",
    "db-migrate-pg": "^1.5.2",
    "dotenv": "^16.4.1",
    "fast-json-patch": "3.1.1",
    "ioredis": "^5.3.2",
    "jose": "^5.2.0",
    "jwks-rsa": "^3.1.0",
    "koa": "^2.15.0",
    "koa-body": "^6.0.1",
    "koa-jwt": "^4.0.4",
    "koa-ratelimit": "^5.1.0",
    "nanoid": "^5.0.4",
    "openid-client": "^5.6.4",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redlock": "v5.0.0-beta.2",
    "zapatos": "^6.3.0"
  },
  "devDependencies": {
    "@iguhealth/fhir-types": "workspace:^",
    "@iguhealth/test-data": "workspace:^",
    "@jest/globals": "^29.7.0",
    "@types/adm-zip": "^0.5.5",
    "@types/jest": "^29.5.11",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-ratelimit": "^5.0.3",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^20.11.7",
    "@types/pg": "^8.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "9.0.8",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsc-watch": "^6.0.4",
    "typescript": "5.2.2"
  },
  "files": [
    "package.json",
    "src/**",
    "database.json",
    "lib/**"
  ]
}
