{
  "name": "@iguhealth/server",
  "version": "0.14.2",
  "homepage": "https://docs.iguhealth.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/IGUHealth/IGUHealth.git"
  },
  "description": "IGUHealth server",
  "main": "./lib/server.js",
  "type": "module",
  "scripts": {
    "build-css": "yarn tailwindcss -i ./index.css -o ./public/css/index.css --minify",
    "watch-css": "yarn tailwindcss -i ./index.css -o ./public/css/index.css --watch",
    "prebuild": "node -p \"'export const LIB_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "build": "yarn prebuild && tsc && yarn copyfiles  -u 1 \"./src/**/*.sql\" lib && yarn build-css",
    "ci": "yarn build & yarn node --enable-source-maps ./lib/cli.js run server & yarn node --enable-source-maps ./lib/cli.js run worker",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest) --runInBand",
    "db-migrate": "db-migrate --sql-file -m src/fhir-storage/providers/postgres/migrations",
    "migrate": "yarn build && yarn node --enable-source-maps  ./lib/cli.js run migrate && yarn node --enable-source-maps  ./lib/cli.js generate-types",
    "watch": "yarn prebuild && yarn migrate up && yarn tsc-watch --onSuccess \"yarn node --enable-source-maps  ./lib/cli.js run both\"",
    "watch_server": "yarn prebuild && yarn migrate up && yarn tsc-watch --onSuccess \"yarn node --enable-source-maps  ./lib/cli.js run server\"",
    "publish": "yarn build && yarn npm publish --access public --tolerate-republish"
  },
  "dependencies": {
    "@aws-crypto/client-node": "^4.0.0",
    "@aws-sdk/client-lambda": "^3.577.0",
    "@aws-sdk/client-resource-groups-tagging-api": "^3.577.0",
    "@dagrejs/graphlib": "^2.2.2",
    "@iguhealth/artifacts": "workspace:^",
    "@iguhealth/cli": "workspace:^",
    "@iguhealth/client": "workspace:^",
    "@iguhealth/components": "workspace:^",
    "@iguhealth/fhir-validation": "workspace:^",
    "@iguhealth/fhirpath": "workspace:^",
    "@iguhealth/generated-ops": "workspace:^",
    "@iguhealth/hl7.fhir.r4.core": "workspace:^",
    "@iguhealth/hl7.fhir.r4b.core": "workspace:^",
    "@iguhealth/iguhealth.fhir.r4.core": "workspace:^",
    "@iguhealth/jwt": "workspace:^",
    "@iguhealth/meta-value": "workspace:^",
    "@iguhealth/operation-execution": "workspace:^",
    "@iguhealth/operation-outcomes": "workspace:^",
    "@koa/bodyparser": "^5.1.1",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.1",
    "@sendgrid/mail": "^8.1.3",
    "@sentry/node": "^7.116.0",
    "@sentry/utils": "^7.116.0",
    "adm-zip": "^0.5.12",
    "ajv": "^8.13.0",
    "commander": "^12.1.0",
    "dayjs": "^1.11.11",
    "db-migrate": "1.0.0-beta.27",
    "db-migrate-pg": "^1.5.2",
    "dotenv": "^16.4.5",
    "fast-json-patch": "3.1.1",
    "ioredis": "5.3.2",
    "jose": "^5.3.0",
    "json-schema-to-typescript": "^14.0.4",
    "jwks-rsa": "^3.1.0",
    "kafkajs": "^2.2.4",
    "keygrip": "^1.1.0",
    "koa": "^2.15.3",
    "koa-body": "^6.0.1",
    "koa-jwt": "^4.0.4",
