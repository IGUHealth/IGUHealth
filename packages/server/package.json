{
  "name": "@iguhealth/server",
  "version": "0.5.63",
  "description": "",
  "main": "./lib/server.js",
  "type": "module",
  "scripts": {
    "prebuild": "node -p \"'export const LIB_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "build": "yarn prebuild && tsc && yarn copyfiles  -u 1 \"./src/**/*.sql\" lib",
    "ci": "yarn build & yarn node --enable-source-maps ./lib/cli.js run server & yarn node --enable-source-maps ./lib/cli.js run worker",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest) --runInBand",
    "migrate": "db-migrate --sql-file -m src/resourceProviders/postgres/migrations",
    "watch": "yarn prebuild && yarn migrate up && yarn tsc-watch --onSuccess \"yarn node --enable-source-maps  ./lib/cli.js run both\"",
    "publish": "yarn build && yarn npm publish --access public --tolerate-republish"
  },
  "dependencies": {
    "@aws-crypto/client-node": "^4.0.0",
    "@aws-sdk/client-lambda": "^3.379.1",
    "@aws-sdk/client-resource-groups-tagging-api": "^3.379.1",
    "@dagrejs/graphlib": "^2.1.13",
    "@iguhealth/artifacts": "workspace:^",
    "@iguhealth/cli": "workspace:^",
    "@iguhealth/client": "workspace:^",
    "@iguhealth/fhir-validation": "workspace:^",
    "@iguhealth/fhirpath": "workspace:^",
    "@iguhealth/generated-ops": "workspace:^",
    "@iguhealth/meta-value": "workspace:^",
    "@iguhealth/operation-execution": "workspace:^",
    "@iguhealth/operation-outcomes": "workspace:^",
    "@koa/bodyparser": "^5.0.0",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@sentry/node": "^7.76.0",
    "@sentry/profiling-node": "^1.2.1",
    "@sentry/utils": "^7.76.0",
    "@types/koa-ratelimit": "^5.0.3",
    "adm-zip": "^0.5.10",
    "ajv": "^8.12.0",
    "commander": "^11.1.0",
    "dayjs": "^1.11.9",
    "db-migrate": "1.0.0-beta.21",
    "db-migrate-pg": "^1.3.0",
    "dotenv": "^16.3.1",
    "fast-json-patch": "3.1.1",
    "ioredis": "^5.3.2",
    "jose": "^4.14.4",
    "jwks-rsa": "^3.0.1",
    "koa": "^2.14.2",
    "koa-body": "^6.0.1",
    "koa-jwt": "^4.0.4",
    "koa-mount": "^4.0.0",
    "koa-ratelimit": "^5.0.1",
    "lodash": "^4.17.21",
    "oidc-provider": "^8.2.2",
    "openid-client": "^5.4.3",
    "pg": "^8.11.0",
    "pino": "^8.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redlock": "v5.0.0-beta.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@iguhealth/fhir-types": "workspace:^",
    "@iguhealth/test-data": "workspace:^",
    "@jest/globals": "^29.6.1",
    "@types/adm-zip": "^0.5.0",
    "@types/jest": "^29.5.2",
    "@types/koa": "^2.13.6",
    "@types/koa-mount": "^4.0.2",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.0",
