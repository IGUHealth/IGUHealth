{
  "name": "@iguhealth/server",
  "version": "0.4.8",
  "description": "",
  "main": "./lib/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc && yarn copyfiles  -u 1 \"./src/**/*.sql\" lib",
    "start": "yarn build && yarn node --enable-source-maps ./lib/local.js",
    "test": "jest --detectOpenHandles",
    "migrate": "db-migrate --sql-file -m src/resourceProviders/postgres/migrations",
    "watch": "yarn migrate up && yarn tsc-watch --onSuccess \"yarn node --enable-source-maps  ./lib/local.js\"",
    "watch-worker": "yarn migrate up && yarn tsc-watch --onSuccess \"yarn node --enable-source-maps  ./lib/worker/local.js\"",
    "publish": "yarn build && yarn npm publish --access public --tolerate-republish"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.379.1",
    "@aws-sdk/client-resource-groups-tagging-api": "^3.379.1",
    "@iguhealth/artifacts": "workspace:^",
    "@iguhealth/cli": "workspace:^",
    "@iguhealth/client": "workspace:^",
    "@iguhealth/fhir-validation": "workspace:^",
    "@iguhealth/fhirpath": "workspace:^",
    "@iguhealth/meta-value": "workspace:^",
    "@iguhealth/operation-execution": "workspace:^",
    "@iguhealth/operation-outcomes": "workspace:^",
    "@koa/bodyparser": "^5.0.0",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "adm-zip": "^0.5.10",
    "dayjs": "^1.11.9",
    "db-migrate": "1.0.0-beta.21",
    "db-migrate-pg": "^1.3.0",
    "dotenv": "^16.3.1",
    "fast-json-patch": "3.1.1",
    "ioredis": "^5.3.2",
    "jose": "^4.14.4",
    "jwks-rsa": "^3.0.1",
    "koa": "^2.14.2",
    "koa-body": "^6.0.1",
    "koa-jwt": "^4.0.4",
    "koa-mount": "^4.0.0",
    "lodash": "^4.17.21",
    "oidc-provider": "^8.2.2",
    "openid-client": "^5.4.3",
    "pg": "^8.11.0",
    "pino": "^8.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redlock": "^5.0.0-beta.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@iguhealth/fhir-types": "workspace:^",
    "@iguhealth/test-data": "workspace:^",
    "@jest/globals": "^29.6.1",
    "@types/adm-zip": "^0.5.0",
    "@types/jest": "^29.5.2",
    "@types/koa": "^2.13.6",
    "@types/koa-mount": "^4.0.2",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/lodash": "^4.14.195",
    "@types/oidc-provider": "^8.2.0",
    "@types/pg": "^8.10.2",
    "@types/uuid": "9.0.2",
    "copyfiles": "^2.4.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.3"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts-esm",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[t]s?(x)"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@iguhealth)"
    ]
  },
  "files": [
    "src/**",
    "database.json",
    "lib/**"
  ]
}
