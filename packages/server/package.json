{
  "name": "@iguhealth/server",
  "version": "0.24.1",
  "homepage": "https://iguhealth.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/IGUHealth/IGUHealth.git"
  },
  "bin": {
    "iguhealth-server": "lib/cli/index.js"
  },
  "description": "IGUHealth server",
  "main": "./lib/server.js",
  "type": "module",
  "scripts": {
    "generate": "yarn node ./lib/cli/index.js generate types",
    "inject-version": "node -p \"'export const LIB_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "build": "yarn inject-version && tsc && yarn copyfiles  -u 1 \"./src/**/*.sql\" lib && yarn build-css",
    "cli": "yarn node ./lib/cli/index.js",
    "build-css": "yarn postcss -o public/css/index.css index.css",
    "watch-css": "yarn postcss --watch -o public/css/index.css index.css ",
    "ci": "yarn cli run both",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest) --runInBand",
    "db-migrate": "db-migrate --sql-file -m src/storage/schemas/migrations/db-migrate/",
    "migrate": "yarn cli run migrate",
    "watch": "yarn inject-version && yarn migrate && yarn tsx watch src/cli/index.ts run both",
    "watch_server": "yarn inject-version && yarn migrate && yarn tsx watch src/cli/index.ts run server",
    "publish": "yarn build && yarn npm publish --access public --tolerate-republish"
  },
