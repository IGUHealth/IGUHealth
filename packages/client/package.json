{
  "name": "@iguhealth/client",
  "packageManager": "yarn@3.6.1",
  "main": "./lib/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest"
  },
  "exports": {
    "./middleware": "./lib/middleware/index.js",
    "./url": "./lib/url.js",
    "./interface": "./lib/interface.js",
    "./types": "./lib/types.js"
  },
  "devDependencies": {
    "@iguhealth/fhir-types": "workspace:^",
    "@jest/globals": "^29.6.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@iguhealth/operation-execution": "workspace:^",
    "@iguhealth/operation-outcomes": "workspace:^"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts-esm",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[t]s?(x)"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@iguhealth)"
    ]
  }
}
