{
  "name": "@iguhealth/fhir-pointer",
  "version": "0.0.1",
  "description": "FHIR Pointer allows creation and manipulation of pointers to fhir-types.",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "yarn jest",
    "publish": "yarn build && yarn npm publish --access public --tolerate-republish"
  },
  "types": "lib/r4/types.d.ts",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "exports": {
    "./r4/sets": "./lib/r4/sets.js",
    "./r4/types": "./lib/r4/types.js"
  },
  "devDependencies": {
    "@iguhealth/fhir-types": "workspace:^",
    "@jest/globals": "^29.6.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "5.1.3"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts-esm",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[t]s?(x)"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@iguhealth)"
    ]
  },
  "files": [
    "readme.md",
    "lib/**",
    "src/**"
  ]
}
