{
  "name": "@genfhi/fhir-server",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "migrate": "db-migrate --sql-file -m src/resourceProviders/postgres/migrations",
    "watch": "yarn nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.test.ts\" --exec \"yarn ts-node --esm src/index.ts\""
  },
  "dependencies": {
    "@genfhi/artifacts": "workspace:^",
    "@genfhi/fhir-query": "workspace:^",
    "@genfhi/fhirpath": "workspace:^",
    "@genfhi/meta-value": "workspace:^",
    "@koa/router": "^12.0.0",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.3.0",
    "dotenv": "^16.3.1",
    "fast-json-patch": "3.1.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "pg": "^8.11.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@genfhi/fhir-types": "workspace:^",
    "@types/jest": "^29.5.2",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa__router": "^12.0.0",
    "@types/pg": "^8.10.2",
    "@types/uuid": "9.0.2",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[t]s?(x)"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transformIgnorePatterns": [
      "(?!(.*(@genfhi/fhir-query|nanostores))/)"
    ]
  }
}
